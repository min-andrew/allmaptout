---
import Layout from "../../layouts/Layout.astro";
import LogoutButton from "../../components/LogoutButton.svelte";
import DashboardStats from "../../components/DashboardStats.svelte";

const session = Astro.locals.session;
---

<Layout title="Admin Dashboard">
  <main class="mx-auto max-w-6xl px-4 py-8">
    <div class="mb-8 flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Admin Dashboard</h1>
        {
          session?.admin_username && (
            <p class="text-gray-600">Logged in as {session.admin_username}</p>
          )
        }
      </div>
      <LogoutButton client:load />
    </div>

    <!-- Quick Links -->
    <div class="mb-8 grid grid-cols-1 gap-4 sm:grid-cols-3">
      <a
        href="/admin/guests"
        class="block rounded-lg bg-blue-600 p-4 text-white shadow transition-colors hover:bg-blue-700"
      >
        <h2 class="font-semibold">Guest Management</h2>
        <p class="text-sm text-blue-100">Add, edit, and manage guests</p>
      </a>

      <a
        href="/admin/events"
        class="block rounded-lg bg-white p-4 shadow transition-shadow hover:shadow-md"
      >
        <h2 class="font-semibold text-gray-900">Event Details</h2>
        <p class="text-sm text-gray-600">Edit ceremony and reception info</p>
      </a>

      <a
        href="/admin/settings"
        class="block rounded-lg bg-white p-4 shadow transition-shadow hover:shadow-md"
      >
        <h2 class="font-semibold text-gray-900">Settings</h2>
        <p class="text-sm text-gray-600">Password and site settings</p>
      </a>
    </div>

    <!-- Dashboard Stats -->
    <DashboardStats client:load />
  </main>
</Layout>
