---
import Layout from "../layouts/Layout.astro";
import EventsList from "../components/EventsList.svelte";
import LogoutButton from "../components/LogoutButton.svelte";

const session = Astro.locals.session;
---

<Layout title="Events">
  <main class="mx-auto max-w-4xl px-4 py-8">
    <div class="mb-8 flex items-center justify-between">
      <div>
        <h1 class="mb-2 text-3xl font-bold text-gray-900">Wedding Events</h1>
        {
          session?.guest_name && (
            <p class="text-gray-600">Welcome, {session.guest_name}</p>
          )
        }
      </div>
      <LogoutButton client:load />
    </div>

    <EventsList client:load />

    <div class="mt-8">
      <a
        href="/rsvp"
        class="inline-block rounded-lg bg-blue-600 px-6 py-3 font-medium text-white hover:bg-blue-700"
      >
        RSVP Now
      </a>
    </div>
  </main>
</Layout>
