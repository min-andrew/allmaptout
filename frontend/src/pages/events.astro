---
import Layout from "../layouts/Layout.astro";

const session = Astro.locals.session;
---

<Layout title="Events">
  <main class="mx-auto max-w-4xl px-4 py-8">
    <div class="mb-8">
      <h1 class="mb-2 text-3xl font-bold text-gray-900">Wedding Events</h1>
      {
        session?.guest_name && (
          <p class="text-gray-600">Welcome, {session.guest_name}</p>
        )
      }
    </div>

    <div class="space-y-8">
      <section class="rounded-lg bg-white p-6 shadow">
        <h2 class="mb-4 text-xl font-semibold text-gray-900">Ceremony</h2>
        <p class="text-gray-600">Details coming soon...</p>
      </section>

      <section class="rounded-lg bg-white p-6 shadow">
        <h2 class="mb-4 text-xl font-semibold text-gray-900">Reception</h2>
        <p class="text-gray-600">Details coming soon...</p>
      </section>
    </div>

    <div class="mt-8">
      <a
        href="/rsvp"
        class="inline-block rounded-lg bg-blue-600 px-6 py-3 font-medium text-white hover:bg-blue-700"
      >
        RSVP Now
      </a>
    </div>
  </main>
</Layout>
